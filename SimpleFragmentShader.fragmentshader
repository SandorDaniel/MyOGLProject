#version 330 core


// Interpolated values from the vertex shaders
in vec4 out_vert_nor;
in vec2 out_vert_tex;

// Ouput data
out vec4 color;

// Values that stay constant for the whole mesh.
uniform sampler2D myTextureSampler;


void main()
{
	// Output color = color of the texture at the specified st
    color = texture( myTextureSampler, vec2(out_vert_tex.s, out_vert_tex.t) ).rgba;
}